                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--FIM Lista Tarefas-->
        <Button x:Name="BtnAdicionar"
                Pressed="BtnAdicionar_Pressed"
                Released="BtnAdicionar_Released"
                BackgroundColor="Green"
                TextColor="White"
                Text="+Adicionar"
                Grid.Column="0"
                Margin="-190, 500, 0, 0"
                HeightRequest="70"
                WidthRequest="180"
                Grid.Row="2"/>
        <Button x:Name="BtnRefresh"
                Pressed="BtnRefresh_Pressed"
                Released="BtnRefresh_Released"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                Text="Atualizar"
                HeightRequest="70"
                WidthRequest="180"
                Margin="190, 500, 0, 0"
                Grid.Column="1"
                Grid.Row="2"/>
    </Grid>

</ContentPage>
